<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="#20000000"
    android:layout_gravity="center_vertical"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scroll_view_id"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <TableLayout
                android:id="@+id/user_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                 
                
                <TableRow>
		                          
                    <RadioButton 
                       android:id="@+id/qvga_button_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:paddingLeft="5dp"
                       android:textSize="10dip"
                       android:button="@null"
                       android:drawableBottom="@drawable/web_cam_radion_button_selector"
                       android:textColor="@color/black" 
                       android:text="@string/video_preview_qvga_str"/>
                  
                    <RadioButton 
                        android:id="@+id/vga_button_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:textSize="10dip"
                        android:button="@null"
                        android:drawableBottom="@drawable/web_cam_radion_button_selector"
                        android:textColor="@color/black"
                        android:text="@string/video_preview_vga_str"/>
                    
                    <RadioButton 
                        android:id="@+id/qelp_button_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="10dip"
                        android:paddingLeft="1dp"
                        android:paddingRight="5dp"
                        android:button="@null"
                        android:drawableBottom="@drawable/web_cam_radion_button_selector"
                        android:textColor="@color/black"
                        android:text="@string/video_preview_720p_str"/>
                </TableRow>
 
                <TableRow>

                    <Button
                        android:id="@+id/minus_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/web_cam_opera_minus_selector"
                        android:text="" />

                    <com.iped.ipcam.gui.BCVControlProgressBar
                        android:id="@+id/clear_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/device_item_unselect"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/add_quality"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/web_cam_opera_plus_selector"
                        android:text="" />
                </TableRow>
                
                <TableRow>

                    <Button
                        android:id="@+id/minus_zoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/web_cam_opera_minus_selector"
                        android:text="" />

                    <com.iped.ipcam.gui.BCVControlProgressBar
                        android:id="@+id/brightness_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/device_item_unselect"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/add_zoom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip"
                        android:layout_gravity="center"
                        android:background="@drawable/web_cam_opera_plus_selector"
                        android:gravity="center"
                        android:text="" />
                </TableRow>

                <TableRow>

                        <com.iped.ipcam.gui.MySeekBar
                     		android:id="@+id/contrast_progressbar"
		            		style="?android:attr/progressBarStyleHorizontal"
		            		android:layout_gravity="center"
	                       android:layout_width="fill_parent"
	                       android:gravity="center"
	                       android:background="@drawable/device_item_unselect"
	                       android:layout_height="wrap_content" />
                           
                </TableRow>
                 

                <TableRow >

                    <Button
                        android:id="@+id/minus_apertrue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/web_cam_opera_minus_selector"
                        android:text="" />

                     <com.iped.ipcam.gui.BCVControlProgressBar
                        android:id="@+id/volume_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/device_item_unselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/add_apertrue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/web_cam_opera_plus_selector"
                        android:text="" />
                </TableRow>
                
                <TableRow >

                     <Button
                        android:id="@+id/left_down"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip"
                        android:gravity="center"
                        android:textSize="10dip"
                        android:background="@drawable/web_cam_video_view_button_selector"
                        android:text="@string/video_preview_left_down"/>

                      <Button
                        android:id="@+id/right_down"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip" 
                        android:gravity="center"
                        android:textSize="10dip"
                        android:background="@drawable/web_cam_video_view_button_selector"
                        android:text="@string/video_preview_right_down"/>
                      
                     <Button
                        android:id="@+id/send_audio"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_marginBottom="3dip"
                        android:gravity="center"
                        android:textSize="10dip"
                        android:background="@drawable/web_cam_video_view_button_selector"
                        android:text="@string/video_preview_send_audio_open"/>
                     
                </TableRow>
            </TableLayout>
        </ScrollView>

        <!--
        android:background="@color/darkgray"
            android:cacheColorHint="@color/darkgray" 
         -->
        <ListView
            android:id="@+id/video_preview_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@style/style_device_list"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/scroll_view_id"
            android:smoothScrollbar="true" />
    </RelativeLayout>

</ScrollView>