<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/darkgray"
        android:orientation="vertical" >

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroll_view_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/user_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TableRow>

                    <Button
                        android:id="@+id/left_up"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/video_preview_left_up"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/mid_up"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" ↑ "
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/right_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/video_preview_right_up"
                        android:visibility="invisible" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/left"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="←"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/mid"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/video_preview_mid"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/right"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="→"
                        android:textSize="12dp" />
                </TableRow>

                <TableRow>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="invisible"/>

                    <Button
                        android:id="@+id/mid_down"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=" ↓ "
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="invisible"/>
                </TableRow>
                
                <TableRow>
		                          
                    <RadioButton 
                       android:id="@+id/qvga_button_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:button="@null"
                       android:paddingLeft="5dp"
                       android:textSize="10dip"
                       android:drawableBottom="@android:drawable/btn_radio"
                       android:text="@string/video_preview_qvga_str"/>
                  
                    <RadioButton 
                        android:id="@+id/vga_button_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:button="@null"
                        android:paddingLeft="5dp"
                        android:textSize="10dip"
                        android:drawableBottom="@android:drawable/btn_radio"
                        android:text="@string/video_preview_vga_str"/>
                    
                    <RadioButton 
                        android:id="@+id/qelp_button_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:button="@null"
                        android:textSize="10dip"
                        android:paddingLeft="1dp"
                        android:paddingRight="5dp"
                        android:drawableBottom="@android:drawable/btn_radio"
                        android:text="@string/video_preview_720p_str"/>
                </TableRow>
 
                <TableRow>

                    <Button
                        android:id="@+id/minus_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="-" />

                    <com.iped.ipcam.gui.BCVControlProgressBar
                        android:id="@+id/clear_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/add_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="+" />
                </TableRow>
                
                <TableRow>

                    <Button
                        android:id="@+id/minus_zoom"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="-" />

                    <com.iped.ipcam.gui.BCVControlProgressBar
                        android:id="@+id/brightness_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/add_zoom"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="+" />
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/minus_foucs"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="-" />

                    <com.iped.ipcam.gui.BCVControlProgressBar
                        android:id="@+id/contrast_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/add_foucs"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="+" />
                </TableRow>
                 

                <TableRow >

                    <Button
                        android:id="@+id/minus_apertrue"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="-" />

                     <com.iped.ipcam.gui.BCVControlProgressBar
                        android:id="@+id/volume_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/add_apertrue"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="+" />
                </TableRow>
                
                <TableRow >

                     <Button
                        android:id="@+id/left_down"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:gravity="center"
                        android:textSize="10dip"
                        android:text="@string/video_preview_left_down"/>

                      <Button
                        android:id="@+id/right_down"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:gravity="center"
                        android:textSize="10dip"
                        android:text="@string/video_preview_right_down"/>
                      
                     <Button
                        android:id="@+id/send_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="35dip"
                        android:gravity="center"
                        android:textSize="10dip"
                        android:text="@string/video_preview_send_audio_open"/>
                     
                </TableRow>
            </TableLayout>
        </ScrollView>

        <ListView
            android:id="@+id/video_preview_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/scroll_view_id"
            android:background="@color/darkgray"
            android:cacheColorHint="@color/darkgray"
            android:smoothScrollbar="true" />
    </RelativeLayout>

</ScrollView>