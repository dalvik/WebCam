<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <com.iped.ipcam.gui.MyVideoView
        android:id="@+id/videoview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

    <RelativeLayout android:id="@+id/direction_control_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" 
         >

        <Button
            android:id="@+id/dir_control_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/web_cam_dircetion_left_selector"/>

        <Button
            android:id="@+id/dir_control_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/web_cam_dircetion_up_selector" />

        <Button
            android:id="@+id/dir_control_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/web_cam_dircetion_right_selector" />

        <Button
            android:id="@+id/dir_control_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/web_cam_dircetion_down_selector" />
    </RelativeLayout>

    <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_centerInParent="true"
        >
    	<include 
    	    layout="@layout/webcam_yuntai_control" />
    </RelativeLayout>
        

    <!-- <include layout="@layout/webcam_yuntai_control_menu" /> -->

    <include
        layout="@layout/play_back_bottom"
        android:visibility="gone" />

</RelativeLayout>