<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/right_control_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/right_control_border"
        android:orientation="horizontal"
        android:paddingBottom="25dip"
        android:paddingTop="25dip"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/qvga_button_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/web_cam_radion_button_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@string/video_preview_qvga_str"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/vga_button_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/web_cam_radion_button_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@string/video_preview_vga_str"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/qelp_button_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/web_cam_radion_button_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="@string/video_preview_720p_str"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/clear"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip" />

                <com.iped.ipcam.gui.AdjustSeekBar
                    android:id="@+id/clear_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:max="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/brightness"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip" />

                <com.iped.ipcam.gui.AdjustSeekBar
                    android:id="@+id/brightness_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:max="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/contrast"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip" />

                <com.iped.ipcam.gui.AdjustSeekBar
                    android:id="@+id/contrast_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:max="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="2dip"
                android:paddingTop="2dip" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/volume"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip" />

                <com.iped.ipcam.gui.AdjustSeekBar
                    android:id="@+id/volume_progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:max="100" />
            </LinearLayout>
        </LinearLayout>

        <!-- com.iped.ipcam.gui.Adjust -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/video_preview_take_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/web_cam_right_control_take_pic_button_selector"
                android:gravity="center"
                android:text="@string/video_preview_take_picture"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/video_preview_view_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/web_cam_right_control_open_button_selector"
                android:gravity="center"
                android:text="@string/video_preview_view_picture"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/video_preview_reverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/web_cam_right_control_reverse_button_selector"
                android:gravity="center"
                android:text="@string/video_preview_revese"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/send_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/web_cam_right_control_speek_button_selector"
                android:gravity="center"
                android:text="@string/video_preview_send_audio_open"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</merge>