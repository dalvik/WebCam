<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="main_exit_style">
        <item name="android:activityCloseEnterAnimation">@anim/alpha_enter</item>
	</style>
	
    <style name="image_list_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <!-- welcom title style -->
    <style name="style_welcome_top_title">
        <item name="android:textColor">@drawable/linen</item>
        <item name="android:textSize">25dip</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">50dp</item> 
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">70dip</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDx">9.0</item>
        <item name="android:shadowDy">9.0</item>
        <item name="android:shadowColor">#000000</item>
    </style>
    
    <style  name="style_welcome_bottom_copyright">
        <item name="android:textColor">@color/welcome_bottom_tips</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item> 
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>
    
     <style name="style_tips_popup_window">
	    <item name="android:windowEnterAnimation">@anim/tips_popup_scale</item>
        <item name="android:windowExitAnimation">@anim/tips_popup_exit_alpha</item>
        <!-- 
        
        <item name="android:activityOpenEnterAnimation">@anim/tips_popup_scale</item>
        <item name="android:activityOpenExitAnimation">@anim/tips_popup_exit_alpha</item>
        
        <item name="android:activityCloseExitAnimation">@anim/rotate_exit_right</item> 
        <item name="android:activityCloseEnterAnimation">@anim/rotate_enter_left</item>
         -->
	</style>
	
    <style name="style_param_set_activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_left_out</item>
    </style>
    
    <style name="style_web_cam_progress_bar" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>  
    </style>
    
    <style name="style_web_cam_radion_button">
    	<item name="android:background">@drawable/web_cam_radion_button_selector</item>    
    </style>
    
    
    <style name="style_device_list">
        <item name="android:background">@drawable/device_item_unselect</item>
        <item name="android:divider">@drawable/list_line</item>
        <item name="android:listSelector">@drawable/web_cam_device_list_selector</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <style name="style_web_cam_param_title_font_set">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="style_web_cam_param_item_title_font_set">
        <item name="android:textStyle">bold</item>
         <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="style_web_cam_param_label_title_font_set">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="style_web_cam_spinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/web_cam_device_list_selector</item>
        <item name="android:clickable">true</item>
    </style>
    
    
     <style name="CustomDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
    	<item name="android:windowIsFloating">true</item>
    	<item name="android:windowContentOverlay">@null</item>
    	<item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    	<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
	</style>
	
	<style name="CustomProgressDialog" parent="@style/CustomDialog">
		<item name="android:windowBackground">@android:color/transparent</item>
    	<item name="android:windowNoTitle">true</item>
	</style>
</resources>